/* pages/wish/wish.wxss */
page{
  height: 100%;
}
.wish-box{
  font-size: 12pt;
  color: #3D3D3D;
  height: 100%;
  max-height: 100%;
  display: flex;
  flex-direction: column;
}
.wish-box button{
  font-size: 12pt;
}
.wish-box .weui-cells{
  flex-shrink: 0;
}

.wish-box .weui-cells__tips{
  font-size: 10pt;
}

.wish-box .weui-cells__title{
  font-size: 12pt;
  color: #3D3D3D;
}

.wish-form-box{
  position: fixed;
  top: 0;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}


.wish-box .wish-link-cells{
  height: 300px;
  display: flex;
  flex-shrink: 1;
  /* flex-grow: 1; */
}

.wish-link-cells .wish-link-cell{
  display: flex;
  flex-grow: 1;
  align-items: flex-start;
  overflow: scroll;
}

.wish-link-cells .wish-link-textarea{
  font-size: 12pt;
  background: #F4F5F6;
  padding: 2px;
}
.wish-link-footer{
  display: flex;
  justify-content: space-between;
}

.wish-selector-cells .weui-cell{
  padding-top: 0;
  padding-bottom: 0;
}
.wish-selector-cells .weui-cell .default-selector{
  width: 100%;
  margin: 15px 0;
  margin-left: 10px;
}


.wish-box .wish-form-btn{
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  font-weight: normal;
}