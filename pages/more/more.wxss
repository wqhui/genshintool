/* pages/more/more.wxss */
page{
  background: #F4F5F6;
  min-height: 100%;
  display: flex;
}
.more-box{
  display: flex;
  flex-grow: 1;
  flex-direction: column;
  color:#3d3d3d;
  font-size: 12pt;
}
.more-box .more-box-header{
  padding: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FFFFFF;
}
.more-box .more-box-header::before,.more-box-header::after{
  content: ' ';
  border-top: 1rpx solid #F4F5F6;
  height: 1rpx;
  width: 200rpx;
}
.more-box .more-box-header::before{
  margin-right: 5px;
}
.more-box .more-box-header::after{
  margin-left: 5px;
}
.more-box-cells .weui-cell{
  padding: 10px;
}
.more-box-cells .weui-cells__title{
  font-size: 12pt;
}
.more-box-cells .more-item-sub-title{
  font-size: 10pt;
}

.more-box-cells .more-about-project{
  word-break:break-all;
  line-height: 1.3;
}